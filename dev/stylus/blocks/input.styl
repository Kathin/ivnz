.input
  border none
  border-radius 2px
  box-sizing border-box
  display block
  position relative
  transition border-color $speed
  background-color #fff
  /*+a($m)
    min-height 60px
  +b($m)
    min-height 50px*/
  & + &
    margin-top 15px
  input,
  textarea
    display block
    border none
    background none
    box-sizing border-box
    width 100%
    position relative
    outline none
    padding 0 15px
    z-index 1
    border-radius 2px
    +a($m)
      font-size 18px
      border-top 25px solid #fff
      line-height 24px 
    +b($m)
      font-size 16px  
      border-top 21px solid #fff
      line-height 20px 
    &::-ms-clear
      display none 
    &:-webkit-autofill
      -webkit-text-fill-color #000
      -webkit-box-shadow 0 0 0px 1000px transparent inset
      transition background-color 5000s ease-in-out 0s
      background none  
    &:focus      
      box-shadow 0 0 0 2px #F78200
      ~ .input__placeholder
        +a($m)
          font-size 14px
          line-height 14px
          top 0
          padding-top 11px            
        +b($m)
          font-size 13px
          line-height 13px 
          top 0
          padding-top 9px         
  input 
    +a($m) 
      height 64px
      padding-bottom 15px
    +b($m)
      height 54px        
      padding-bottom 13px
  textarea
    border-bottom 20px solid #fff
    resize vertical
    max-height 600px
    &[rows="1"]
      resize none
      +a($m)
        white-space nowrap
      +b($m)
        height 84px
  &__placeholder
    font-family 'Proxima Nova'
    color #999999
    position absolute
    transition all $speed
    left 15px    
    z-index 1
    background #fff
    +a($m)
      font-size 18px
      line-height 24px
      top 18px      
    +b($m)
      font-size 16px
      line-height 20px
      top 15px
    &.active
      z-index 2
      +a($m)
        font-size 14px
        line-height 14px
        top 0
        padding-top 11px              
      +b($m)
        font-size 13px
        line-height 13px 
        top 0
        padding-top 9px   
  &__icon
    position absolute
    top 0
    left 0
    width 40px
    height 100%
    white-space nowrap
    text-align center
    z-index 3
    color $blue3e 
    &:before
      content "" 
      display inline-block
      vertical-align middle
      height 100% 
    .ico
      &.-input__name
        width 33px
        height 18px
      &.-input__phone
        width 18px
        height 17px
      &.-input__email
        width 17px
        height 12px
      &.-input__location
        width 11px
        height 17px
      &.-input__time
        width 19px
        height 19px
        opacity 0.75 
      &.-input__skype
        width 18px
        height 19px
        opacity 0.75 
    ~ input
      padding-left 41px
  &__status .ico,
  &__error
    display none
  &__status
    position absolute
    top 10px
    right 10px
    .ico
      width 22px
      height 22px
      &.-input__success
        color $green
      &.-input__error
        color #D0011B
  &__error
    color #D0011B
    position absolute
    top 100% 
    right 0
    font-size 12px
    line-height 18px
    text-align right
    white-space nowrap
    overflow hidden
    max-width 100%
    text-overflow ellipsis    
  &.-error,
  &.-success
    input,
    textarea
      padding-right 40px
  &.-error
    .ico.-input__error
      display block
  &.-error &
    &__error
      display block
  &.-success
    .ico.-input__success
      display block
  &:hover,
  &.-focus
    border-color $blue3e
  &.-disabled
    pointer-events none
    background-color #f5f5f5 

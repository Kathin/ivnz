.contacts
  .header  
    background-color #212B41
    line-height 0
    +a($m)
      min-height 310px
    +b($m)
      min-height 174px
      padding 0 20px 
      padding-bottom 40px
      box-sizing border-box
    &__content
      max-width 772px
      text-align left
      +a($m)
        padding-top 180px
      +b($m)
        padding-top 96px
      h1
        text-transform uppercase  
        margin 0px
    .greyline
      position absolute
      right 0
      +a($m)
        top 110px 
      +b($m)
        top 102px 
      &.active    
        height 120px
  &__content 
    color #000000
    position relative
    font-size 0
    +a($m)
      margin-top 60px
    +b($m)
      margin-top 40px
    .container
      +b($m)
        padding 0 20px
        box-sizing border-box
    h2 
      text-transform uppercase
    &-about      
      display inline-block
      vertical-align top     
      +a($m)
        width 51.23%
        padding-right 20px
        box-sizing border-box
      +b($m)
        width 100%
      .greycircle
        position absolute
        background #EBEBEB
        +a($t)
          top 457px
          left 0 
        +btw($t, $d)
          top 500px
          left 0 
        +b($t)
          display none
        &:before
          background transparent
          border 2px solid #EBEBEB
          +a($t)
            width 12px
            height 12px
            top auto
            bottom -16px
            left -7px
        &.active
          +a($t)     
            height 60px
    &-address
      font-size 18px
      line-height 28px 
      font-family "Proxima Nova"
      +a($m)
        margin-top 40px
      +b($m)
        margin-top 20px
    &-numbers
      margin-top 40px
      font-size 0
      width 100%
      &-item
        vertical-align middle
        display inline-block
        font-weight bold
        +a($t)
          width 50%
        +b($t)
          width 100%
          margin-bottom 40px
          &:last-child
            margin-bottom 0
        +a($m)
          height 45px
          line-height 45px
          font-size 18px
        +b($m)
          text-align center
          line-height 25px
          font-size 16px
        img
          vertical-align middle
          +a($m)
            padding-right 15px
          +b($m)
            display block
            margin 0 auto
            margin-bottom 10px      
    .vacancy__talants-slider
      margin-top 0
      +a($m)
        top -102px
  &__requisites
    color #000000
    background #FAFAFB
    +b($m)
      margin-top 102px
      box-sizing border-box
    .container
      +b($m)
        padding 0 20px
        box-sizing border-box
        position relative
    &-button
      font-weight bold 
      cursor pointer          
      +a($t)
        margin-top 174px
        font-size 24px
        line-height 60px  
        text-transform uppercase 
        width 100%
      +btw($m, $t)      
        margin-top 50px 
        font-size 24px
        line-height 60px 
        text-transform uppercase  
        width 100%
      +b($m)
        position absolute     
        top -82px      
        font-size 18px
        line-height 32px 
        width calc(100% - 40px)
      &:after
        content ''
        display inline-block
        background url('../img/left-arrow.svg')
        transform rotate(-90deg)
        background-size 100%
        transition all $speed
        +a($m)
          width 9px
          height 15px
          margin-left 15px
        +b($m)
          width 6px
          height 10px
          position absolute
          right 0
          top 50%
          margin-top -5px
      &.-active
        &:after         
          transform rotate(90deg)
    &-info
      font-size 0
      width 100%
      height 0      
      transition all $speed
      overflow hidden
      box-sizing border-box
      padding 0
      &.-active
        height auto     
        +a($m)
          padding 50px 0 60px
        +b($m)
          padding 30px 0 40px
      &-item
        display inline-block
        vertical-align top
        font-family "Proxima Nova"
        box-sizing border-box
        +a($m)
          width 50%
          padding-right 45px
        +b($m)
          width 100%
          & + &
            margin-top 24px
  &__map
    width 100%
    +a($m)
      height 800px
    +b($m)
      height 480px
    .orangecircle
      position absolute
      z-index 3
      +a($d)
        top -64px  
        right -47px
      +btw($m, $d)
        top -64px  
        right 0px
      +b($m)
        top -19px  
        right 20px
      &:before
        +a($m)
          bottom auto
          top -16px
          left -7.5px
        +b($m)
          bottom auto
          top -10px
      &.active
        +a($m)
          height 144px
        +b($m)
          height 71px  
    &-baloon
      position absolute
      background #fff
      border-radius 4px
      margin-top -10px
      font-family "Proxima Nova"
      transition-property opacity
      transition-duration $speed
      opacity 0
      &.active
        opacity 1
      +a($m)
        padding 25px 30px
        line-height 28px
        font-size 18px
      +b($m)
        padding 13px
        line-height 25px
        font-size 16px
      .close
        position absolute
        width 15px
        height 15px
        z-index 10
        +a($m)
          top 25px
          right 30px
        +b($m)
          top 15px
          right 15px
        img 
          vertical-align top
      p 
        padding-top 10px
    .popover {
        display: block;
    }
    .popover .close {
        position: absolute;
        right: 5px;
        top: 1px;
    }
    .btn {
        margin-top: 10px;
    }
    .ymaps-2-1-65-shadows-pane
      //width 100%
      //height 100%
      //transition all $speed
      //.ymaps-2-1-65-balloon-shadow
      //.ymaps-2-1-65-events-pane
      width 100% !important
      height 100% !important
      left 0 !important
      top 0 !important
      background-image linear-gradient(61deg, #141414 1%, #4A4A4A 100%)
      background rgba(31,45,79,0.50)
      transition all $speed
      
      
        
  
.audit-form
  background-image url('../img/form-back_dark.svg') 
  background-position center 315px  
  background-repeat no-repeat
  background-size 875px
  padding-top 106px
  padding-bottom 100px
  &__title
    text-transform uppercase
    text-align center
    max-width 675px    
    margin 0 auto
  &__subtitle
    font-family "Proxima Nova"
    font-size 18px
    color #FFFFFF
    text-align center
    line-height 28px
    margin-top 40px
  &__form
    display block
    margin 0 auto
    max-width 590px
    margin-top 40px
    background-image: linear-gradient(44deg, #144FC0 0%, #2CA7FF 100%);
    border-radius: 10px;
    padding 34px 0 61px
    &-legend
    form
      max-width 380px
      margin 0 auto
    &-legend
      font-family "Proxima Nova"
      font-size 18px
      color #FFFFFF
      line-height 32px
      font-weight bold
      margin-bottom 25px
  .control-label
    margin-top 33px
  .form__button   
    border none  
    background-color #F78200
    border-radius 2px
    color #ffffff
    font-weight bold
    text-align center      
    font-family "Proxima Nova"
    display inline-block
    width 100%
    margin-top 35px
    cursor pointer
    +a($m)
      font-size 18px
      line-height 60px
      height 60px
      padding 0 40px
    +b($m)
      box-sizing border-box  
      font-size 15px
      line-height 46px
      height 50px
    &:hover
      background-color #FF8E11
      text-decoration none
    
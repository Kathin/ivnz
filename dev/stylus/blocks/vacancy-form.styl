.vacancy-form
  background-repeat no-repeat
  background-color #1F2637  
  color #fff
  +a($m)
    margin-top 120px
    background-image url('../img/form-back_dark.svg') 
    background-position center 362px  
    background-size 875px
  +b($m)
    margin-top 50px
    background-image url('../img/form-back_m.svg') 
    background-position right 358px  
    background-size 286px
  .container
    box-sizing border-box
    position relative
    +a($m)
      padding-top 98px
      padding-bottom 100px
    +b($m)
      padding 40px 20px 0
  &__title
    text-transform uppercase
    max-width 675px    
    margin 0 auto
    +a($m)
      text-align center
    +b($m)
      text-align left
    span
      color #536286
      width 100%
      display block
      font-weight normal
      +a($m)
        font-size 24px
        line-height 30px
        margin-top 20px
      +b($m)
        font-size 18px
        line-height 24px
        margin-top 10px
  &__subtitle
    font-family "Proxima Nova"
    color #FFFFFF
    text-align center
    max-width 740px
    margin 0 auto
    +a($m)
      text-align center
      font-size 18px
      line-height 28px
      margin-top 40px
    +b($m)
      text-align left
      font-size 16px
      line-height 20px
      margin-top 20px
      p
        margin-top 20px
    span
      color #536286
      width 100%
      display block
      font-weight normal
  &__form
    display block
    margin 0 auto
    background-image linear-gradient(-44deg, #144FC0 0%, #2CA7FF 100%)
    margin-top 40px
    +a($m)
      max-width 590px
      border-radius 10px
      padding 34px 0 61px
    +b($m)
      width calc(100% + 40px)
      margin-left -20px
      border-radius 0
      padding 30px 20px 40px
      box-sizing border-box
    &-legend
    form
      margin 0 auto
      +a($m)
        max-width 380px        
      +b($m)
        width 100%        
    &-legend
      font-family "Proxima Nova"
      font-size 18px
      color #FFFFFF
      line-height 32px
      font-weight bold
      margin-bottom 25px
      +b($m)
        display none
  .control-label
    +a($m)
      margin-top 36px
    +b($m) 
      margin-top 20px 
  .form__button   
    border none  
    background-color #F78200
    border-radius 2px
    color #ffffff
    font-weight bold
    text-align center      
    font-family "Proxima Nova"
    display inline-block
    width 100%
    cursor pointer
    +a($m)
      font-size 18px
      line-height 60px
      height 60px
      padding 0 40px
      margin-top 35px
    +b($m)
      box-sizing border-box  
      font-size 15px
      line-height 46px
      height 50px
      margin-top 20px
    &:hover
      background-color #FF8E11
      text-decoration none
  .blueline
    position absolute
    +a($m)
      top -37px
      left 0 
    +b($m)
      top -25px 
      left 20px 
    &.active
      +a($m)    
        height 100px
      +b($m)
        height 60px
  .orangecircle
    position absolute
    +a($m)
      top -186px 
      right 0
    +b($m)
      top -63px 
      right 20px 
    &.active
      +a($m)     
        height 360px
      +b($m)
        height 100px
    
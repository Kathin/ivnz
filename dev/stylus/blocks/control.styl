.control 
  position relative
  cursor pointer
  font-size 0
  line-height 0
  width 100%
  white-space nowrap
  +b($m)
    &:after
      content ''
      width 67px
      height 15px
      right -20px
      top 5px
      display block
      position absolute
      background-image linear-gradient(90deg, rgba(30,100,211,0.00) 0%, #185BC9 99%)
  &__box
    display inline-block
    position relative
    text-align center
    font-size 0
    border-radius 2px
    background-color #fff 
    transition background-color $speed 
    vertical-align middle
    +a($m)
      width 18px
      height 18px
      line-height 18px
    +b($m)
      width 22px
      height 22px
      line-height 22px
  &__image
    position relative
    overflow hidden
    border-radius 3px
    img
      +a($m)
        width 52px
        height 52px
      +b($m)
        width 44px
        height 44px
    &:before
      content "" 
      display block
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      border 2px solid $redf4
      opacity 0
      transform translateZ(0)
    img
      display block
  input
    position absolute
    top 0
    left 0
    z-index -1
    opacity 0.01
    &[type="radio"]
      ~ .control__box
        border-radius 50%
        &:before
          content "" 
          display inline-block
          vertical-align middle
          width 8px
          height 8px 
          border-radius 50%
          background-color $redf4 
          opacity 0
      &:checked
        ~ .control__box
          &:before
            opacity 1
    &[type="checkbox"]
      ~ .control__box
        border-radius 3px
        img
          display inline-block
          vertical-align middle
          opacity 0          
          transition opacity $speed
          +a($m)
            width 10px
            height 8px
          +b($m)
            width 12.67px
            height 10px
      &:hover
        ~ .control__box
          box-shadow 0 0 0 2px #EAEAEA
      &:checked
        ~ .control__box
          img
            opacity 1
        ~ .control__value
          opacity 1
    &:checked
      ~ .control__image
        &:before
          opacity 1
    &:disabled
      ~ .control__box
        background-color #f5f5f5
        border-color rgba($blueb7, 0.5) 
  &:hover &,
  label:hover &
    &__box
      background-color #fbfbfb 
  &__value
    display inline-block
    margin-left 8px
    opacity 0.5 
    transition opacity $speed
    white-space nowrap
    vertical-align middle
    position relative
    color #fff
    &-text
      display inline-block
      font-size 14px
      line-height 20px      
      vertical-align middle
      font-family "Proxima Nova"
      padding 2px 0 0 2px
      a
        color #A5C4FF

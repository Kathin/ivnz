.about
  .header
    background-image url(../img/header-about.png)
    background-size cover
    background-position top    
    background-color #ffffff
    +a($m)
      min-height 800px
    +b($m)
      min-height 712px
      padding 0 20px
    &__content
      max-width 772px
      text-align left
      +a($m)
        padding-top 180px
      +b($m)
        padding-top 102px
      h1
        text-transform uppercase  
        margin-bottom 40px      
    &__about
      max-width 500px
      &-item
        vertical-align middle
        +a($m)
          display table
          padding-bottom 50px
        +b($m)
          display block
          padding-bottom 40px
        img 
          vertical-align middle
          text-align left
          +a($m)
            margin-right 30px
            display table-cell
          +b($m)
            display block
            margin 0 auto
            margin-bottom 10px
        span 
          font-family "TT Rounds"
          vertical-align middle
          +a($m)
            display table-cell
            font-size 24px
            line-height 32px
          +b($m)
            display block
            text-align center
            font-size 14px
            line-height 20px
            font-weight bold
            text-transform uppercase 
  &__people
    .svg-masks
      height 0
    .container
      +b($m)
        padding 0 20px
        box-sizing border-box
    .blueline
      position absolute
      +a($m)
        top -50px 
        left 0
      +b($m)
        top -25px  
        left 20px
      &.active
        +a($m)    
          height 100px
        +b($m)
          height 60px
    .greyline
      position absolute
      left 50% 
      +a($m)
        top -173px
      +b($m)
        display none
      &.active
        +a($m)     
          height 476px
        +b($m)
          height 100px
    .orangecircle
      position absolute
      +a($m)
        top -171px
        right 0
      +b($m)
        top -63px  
        right 20px
      &.active
        +a($m)     
          height 204px
        +b($m)
          height 100px
    &-content
      color #000000
      +a($m)
        padding-top 60px
      +b($m)
        padding-top 40px
      h2
        text-transform uppercase
    &-list
      font-size 0
      &:after 
        content ''
        display inline-block
        width 100%
        height 0
      & + h2
        +a($m)
          margin-top 120px
        +b($m)
          margin-top 60px
      &-item 
        display inline-block
        box-sizing border-box
        margin-top 60px
        vertical-align top
        +a(1070px)
          margin-right calc((100% - 1056px)/2)
          width 352px
          padding-left 50px
        +btw($m, 1070px)
          width 50% 
          padding-left 50px
        +b($m)
          width 352px 
          display block 
          margin 40px auto 0 
          padding-left 0px   
        &:hover
          .about__people-list-item-img
            &:after
              background url(../img/mask_1.svg) 
        &-img          
          width 299px
          height 309px
          position relative
          z-index 2
          &:after
            content ''
            position absolute
            top 0
            left 0
            background url(../img/mask.svg)              
            width 299px
            height 309px 
            transition-duration $speed 
            transition-property all           
          .svg
            width 299px
            height 309px
            text-align center
            position relative
        &:nth-child(3n-1)
          .about__people-list-item-img 
            &:after
              transform rotate(180deg)
        &:nth-child(3n)
          +a($m)
            margin-right 0
          .about__people-list-item-img 
            &:after
              transform rotate(-100deg)
        &-assistents
          position relative
          margin-top 31px
          z-index 1
          min-height 78px
          &:before
            content ''
            display block
            position absolute
            width 173px
            height 304px
            background url(../img/line-assis.svg)
            bottom 24.8px
            left -45px
            z-index 0
            transition-duration $speed 
            transition-property all 
          &-item
            display inline-block
            vertical-align top
            height 60px
            padding 11px 0 7px 75px
            position relative            
            z-index 1            
            transition-duration $speed 
            transition-property all 
            &:hover
              .about__people-list-item-assistents-img
                &:after
                  background url(../img/mask_sm_1.svg)
            &.-hidden
              width 0
              padding-left 38px
              left 0
              position absolute
              z-index 1
              .about__people-list-item-assistents-name
              .about__people-list-item-assistents-job  
                opacity 0
            &.-active
              left 38px
              position absolute
              z-index 2
          &-img
            z-index 2
            &:after
              content ''
              position absolute
              top 0
              left 0
              background url(../img/mask_sm.svg)              
              width 60px
              height 62px 
            > .svg
              width 60px
              height 62px
              text-align center
              position relative
              position absolute
              top 0
              left 0              
              image
                position absolute
                bottom 0
          &-name
            font-size 15px
            line-height 20px
          &-job
            font-size 15px
            line-height 24px
            color #636870
            font-family "Proxima Nova"
        &-name
          font-size 24px
          line-height 30px
          margin-top 30px
        &-job
          font-size 18px
          line-height 24px
          margin-top 20px
          color #636870
          font-family "Proxima Nova"
  &__history
    margin-top 120px
    position relative
    .container
      +btw($m, $t)
        width 98%
    .greycircle
      position absolute
      &.-top
        +a($t)
          top 669px
          right 41px
        +btw($m, $t)
          top 669px
          right 30px
        +b($m)
          top 0 
          right 0
          width 0px
          height 1px
        &:before
          +a($m)
            top 154px
          +b($m)
            display none
        &.active
          +a($m)     
            height 236px
          +b($m)
            width 114px
      &.-middle
        +a($t)
          top 996px
          left 44px
        +btw($m, $t)
          top 996px
          left 32px
        +b($m)          
          display none       
        &:before
          +a($m)
            top 213px
          +b($m)
            top -10px
        &.active
          +a($m)     
            height 441px
          +b($m)
            height 100px
      &.-bottom
        +a($m)
          bottom 0
          left 0
        +b($m)
          bottom 118px
          left 0
          width 0px
          height 1px 
        &:before
          +b($m)
            display none       
        &.active
          +a($m)     
            height 200px
          +b($m)
            width 114px
    &-text
      color #000000
      max-width 612px
      margin 0 auto
      +b($m)
        position relative  
        padding 47px 20px 0   
      .about__history-quotes1
        content ''
        background url('../img/quotes1.svg')
        width 52px
        height 53.18px
        position absolute
        display block
        +a($m)
          top 118px
          margin-left -92px
        +b($m)
          top -25px
          left calc(50% - 26px)
      .about__history-quotes2
        content ''
        background url('../img/quotes2.svg')
        width 52px
        height 53.18px
        position absolute
        display block
        +a($m)
          bottom 96px
          right calc(50% - 372px)
        +b($m)
          bottom 93px
          right calc(50% - 26px)
      h2 
        text-transform uppercase
        margin-bottom 60px
        +b($m)
          display none
      &-block
        font-family "Proxima Nova"
        +a($m)
          font-size 18px
          line-height 28px
        +b($m)
          font-size 16px
          line-height 24px
        & + &
          +a($m)
            padding-top 60px
          +b($m)    
            padding-top 50px
        p + p 
          +a($m)
            padding-top 28px 
          +b($m)   
            padding-top 24px   
        &:nth-child(2n + 1)
          .about__history-text-title
            left 0
        &:nth-child(2n)
          .about__history-text-title
            right 0
      &-title
        +a($m)
          position absolute
        +b($m)
          position relative
          text-align center
          margin-bottom 20px
        img 
          display block          
          +btw($m, $t)
            width 70px
          +b($m)
            margin 0 auto
            padding-bottom 10px
        span 
          vertical-align middle
          text-transform uppercase       
          +btw($m, $t)
            height 70px
            line-height 70px
            left -56px  
          +a($m)  
            position absolute
            top -180px
            transform rotate(-90deg)
            left -47px
            opacity 0.3
            font-size 24px
            line-height 85px
            height 85px
            width 180px
          +b($m)
            position relative
            font-size 18px
            line-height 20px
            font-family "TT Rounds"
            font-weight bold
    &-autor
      position relative
      +a($m)
        margin-top 30px
        padding 19px 0 19px 105px
      +b($m)
        margin-top 103px
        padding 13px 0 8px 82px
      &-img
        position absolute
        top 0px
        left 0px
        img
          +b($m)
            height 63px
      &-name
          line-height 20px
        +a($m)
          font-size 18px
        +b($m)
          font-size 15px
      &-job
        font-size 15px
        line-height 24px
        font-family "Proxima Nova"
        opacity .5
  &__events
    color #000
    +a($m)
      margin-top 110px
    +b($m)
      margin-top 60px
    .container
       +b($m)
          padding 0 20px
          box-sizing border-box
    h2
      text-transform uppercase
    &-list
      +a($m)
        margin-top 60px
      +b($m)
        margin-top 20px
      &-item
        display block
        font-size 0
        width 100%
        position relative
        border-top 1px solid rgba(216, 216, 216, .5)        
        line-height 0
        position relative
        transition-duration $speed 
        transition-property all      
        +a($m)
          height 60px
          &:first-child
            border none          
        +b($m)
          padding 10px 0 
          border-color #EDEDED
          &:last-child
            border-top 1px solid #EDEDED  
        &:hover
          .about__events-list-item-title
            color #3C7FFF
            &:after
              opacity 1
              height auto
        > *
          vertical-align baseline
          +a($m)
            line-height 60px
            display inline-block
          +b($m)
            display block
            line-height 24px
        &-date
          width 104px
          font-family "Proxima Nova"
          color #636870
          +a($m)
            position absolute
            left 0
            top 3px
            font-size 15px
          +b($m)
            position relative
            font-size 14px
        &-title 
          color #000
          font-weight bold          
          transition-duration $speed 
          transition-property all    
          +a($m)
            white-space nowrap
            text-transform uppercase
            font-size 24px
            padding-left 104px
          +b($m)
            font-size 18px
          &:after
            content 'посмотреть отчет'
            opacity 0
            height 0
            color #636870
            text-transform none
            font-family "Proxima Nova"
            font-weight normal
            text-decoration underline
            padding-left 30px
            font-size 18px
            line-height 20px    
            transition-duration $speed 
            transition-property all 
            +b($m)
              display none
  &__clients
    +a($m)
      margin-top 120px
    +b($m)
      margin-top 50px
    .container
       +b($m)
          padding 0 20px
          box-sizing border-box
    .blueline
      position absolute
      +a($m)
        top -96px 
        left 50%
      +b($m)
        display none
      &.active
        +a($m)    
          height 100px
        +b($m)
          height 60px
    h2
      color #000
      text-transform uppercase
      +a($m)
        margin-bottom 47px
      +b($m)
        margin-bottom 20px
    &-list
      line-height 0
      font-size 0
      &-item
        display inline-block
        position relative
        background #fff
        border-radius 4px
        box-shadow 0 12px 24px 0 rgba(22,22,22,0.05)  
        vertical-align top   
        overflow hidden 
        transition-duration $speed 
        transition-property all      
        &:hover  
          box-shadow 0 12px 24px 0 rgba(22,22,22,0.15)
        +a($t)
          height 150px
          width 23.24%
          margin-right calc(7.04%/3)
          margin-bottom 27px
          &:nth-child(4n)
            margin-right 0            
        +btw($m, $t)
          width 30%
          height 150px
          margin-right calc(10%/2)
          margin-bottom 27px
          &:nth-child(3n)
            margin-right 0           
        +b($m)
          width 46.42%
          height 81px
          margin-right 7.16%
          margin-bottom 20px
          &:nth-child(2n)
            margin-right 0  
        img 
          position relative
          top 50%
          transform translateY(-50%) translateX(-50%) 
          left 50%   
          +b($m) 
            max-width 76.15%
  &__publication
    background #1D2333
    +a($m)
      margin-top 120px
      padding-bottom 100px 
    +b($m)
      margin-top 50px
      padding-bottom 20px    
    .container
      +b($m)
        padding 0 20px
        box-sizing border-box
    h2
      text-transform uppercase
      +a($m)
        padding-top 80px
        margin-bottom 40px
      +b($m)
        padding-top 40px
        margin-bottom 20px
    .greyline
      position absolute
      background #EBEBEB
      +a($m)
        top -50px 
        left 50%
      +b($m)
        display none
      &.active
        +a($m)    
          height 100px
        +b($m)
          height 60px
    &-list
      line-height 0
      font-size 0
      &-item
        display inline-block
        position relative
        border-radius 4px
        border 1px solid rgba(250, 250, 250, .1)
        vertical-align top   
        overflow hidden 
        transition-duration $speed 
        transition-property all  
        box-sizing border-box    
        &:hover  
          border 1px solid #F78200 
        &:nth-child(2)
          img  
            +b($m) 
              max-width 43%      
        +a($t)
          height 150px
          width 23.24%
          margin-right calc(7.04%/3)
          margin-bottom 27px
          &:nth-child(4n)
            margin-right 0            
        +btw($m, $t)
          width 30%
          height 150px
          margin-right calc(10%/2)
          margin-bottom 27px
          &:nth-child(3n)
            margin-right 0           
        +b($m)
          width 46.42%
          height 81px
          margin-right 7.16%
          margin-bottom 20px
          &:nth-child(2n)
            margin-right 0  
        img 
          position relative
          top 50%
          transform translateY(-50%) translateX(-50%) 
          left 50%   
          +b($m) 
            max-width 57%
  .audit-form
    background-color #1F2637
    .orangecircle
      +a($m)
        top -70px 
      &.active
        height 120px
        
.blog
  .header  
    background-color #212B41
    +a($m)
      min-height 316px
    +b($m)
      min-height 174px
      padding 0 20px 
    &__content
      max-width 772px
      text-align left
      +a($m)
        padding-top 180px
      +b($m)
        padding-top 96px
      h1
        text-transform uppercase  
        margin 0px
  &__list
    .container
      +b($m)
        padding 0 20px
        box-sizing border-box
    color #000
    +a($m)
      padding-top 46px
    +b($m)
      padding-top 30px  
    .blueline
      position absolute
      +a($m)
        top -76px
        left 0
      +b($m)
        top -50px
        left 20px
      &.active
        +a($m)     
          height 60px
        +b($m)
          height 40px
    .greyline
      position absolute
      background rgba(216, 216, 216, .1)
      +a($m)
        top -99px
        left 50%
      +b($m)
        display none
      &.active
        +a($m)     
          height 120px
    .greycircle
      position absolute
      background #EBEBEB
      +a($m)
        top -146px
        right 0
      +b($m)
        top -81px  
        right 20px
      &:before
        background transparent
        border 2px solid #EBEBEB
        +a($m)
          width 12px
          height 12px
          top auto
          bottom -16px
          left -7px
        +b($m)
          width 6px
          height 6px
          top auto
          bottom -10px
          left -4px 
      &.active
        +a($m)     
          height 204px
        +b($m)
          height 90px 
    &-subtitle
      color rgba(0, 0, 0, .3)
      +a($m)
        text-transform uppercase
        line-height 30px
        font-size 18px
        margin-bottom 34px
      +b($m)
        padding-bottom 10px
        border-bottom 1px solid rgba(216, 216, 216, .5)
        margin-bottom -10px
    &-item
      font-size 0
      display block
      +a($m)
        margin-bottom 60px
      +b($m)
        padding 30px 0
      h2
        +btw($m, $t)
          font-size 30px
          line-height 36px 
      a:hover
        text-decoration none
        h2
          color #3C7FFF   
        img 
          transform scale(1.20)
      .bluecircle
        position absolute
        z-index 3
        +a($d)
          top -61px  
          right -47px
        +btw($m, $d)
          top -61px  
          right 0px
        +b($m)
          top 117px  
          right 20px
        &:before
          +a($m)
            bottom auto
            top -16px
            left -7.5px
          +b($m)
            bottom auto
            top -10px
        &.active
          +a($m)
            height 100px
          +b($m)
            height 60px 
      .orangeline
        position absolute
        +a($m)
          top -91px
          left 50%
        +b($m)
          top -58px
          left 50%
        &.active
          +a($m)     
            height 60px
          +b($m)     
            height 40px
      .greycircle
        position absolute
        background #EBEBEB
        +a($m)
          top -100px
          right 0
        +b($m)
          top -103px  
          right 20px
        &:before
          background transparent
          border 2px solid #EBEBEB
          +a($m)
            width 12px
            height 12px
            top auto
            bottom -16px
            left -7px
          +b($m)
            width 6px
            height 6px
            top auto
            bottom -10px
            left -4px 
        &.active
          +a($m)     
            height 100px
          +b($m)
            height 90px  
      &-info  
        display inline-block  
        box-sizing border-box
        vertical-align top
        width 100%
        +a($m)
          padding-right 417px
          //width calc(100% - 372px)   
          //padding-right 45px
        +b($m)
          padding-bottom 280px
        h2
          color #000
          +a($m)
            text-transform uppercase
          +b($m)
            text-transform none
        &-timename
          color #636870
          font-size 15px
          line-height 28px
          font-family "Proxima Nova"
          +a($m)
            font-size 15px
            line-height 28px
            padding 10px 0 20px
          +b($m)
            font-size 14px
            line-height 24px
            padding 10px 0 20px
          span + span
            +a($m)
              padding-left 45px
            +b($m)
              padding-left 20px
        &-summary
          +a($m)
            display block
          +b($m)
            display none
        .text
          font-family "Proxima Nova"        
      &-img
        display inline-block  
        vertical-align top
        position absolute
        +a($m)
          width 372px
          top 0
          right 0
        +b($m)
          width 100%
          text-align center
          bottom 0
        &:after
          content ''
          width 100%
          display block
          height 0
        img 
          transform scale(1)
          transition scale, $speed
          +a($m)
            max-width 305px
            margin-right 67px
            float right
          +b($m)
            max-width 258px
            width 100%            
  &__notes
    +a($m)
      margin-bottom 60px
    +b($m)
      padding 20px 0
    &-title
      color rgba(0, 0, 0, .3)
      text-transform uppercase
      +a($m)
        font-size 24px
        line-height 30px 
      +b($m)
        font-size 18px
        line-height 32px 
    &-list
      margin-top 10px
      &-item
        display block
        font-size 0
        width 100%
        position relative
        border-top 1px solid rgba(216, 216, 216, .5)        
        line-height 0
        position relative
        transition-duration $speed 
        transition-property all      
        +a($m)
          height 60px
          &:first-child
            border none          
        +b($m)
          padding 10px 0 
          border-color #EDEDED
          &:last-child
            border-top 1px solid #EDEDED  
        &:hover
          .blog__notes-list-item-title
            color #3C7FFF
            /*&:after
              opacity 1
              height auto*/
        > *
          vertical-align baseline
          +a($m)
            line-height 60px
            display inline-block
          +b($m)
            display block
            line-height 24px
        &-date
          width 104px
          font-family "Proxima Nova"
          color #636870
          +a($m)
            position absolute
            left 0
            top 3px
            font-size 15px
          +b($m)
            position relative
            font-size 14px
        &-title 
          color #000
          font-weight bold          
          transition-duration $speed 
          transition-property all    
          +a($m)
            white-space nowrap
            text-transform uppercase
            font-size 24px
            padding-left 104px
          +b($m)
            font-size 18px

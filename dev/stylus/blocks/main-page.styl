          z-index 1
          border-radius 10px          
          +b($m)
            display none
        &-item
          position relative
          font-weight bold
          opacity 0.7
          color #636870
          cursor pointer          
          transition-duration 0.2s, 0.2s, 0.2s 
          transition-property all
          vertical-align top
          +a($m)
            display inline-block
            font-size 24px
            line-height 38px
            height 38px
          +b($m)
            display block
            padding-left 30px
            font-size 18px
            line-height 40px
            height 40px
            &:before
              content ''
              width 11px
              height 11px
              display block
              position absolute
              border 3px solid #636870
              border-radius 11px
              top 50%
              transform translateY(-50%)
              left 0
          &:after
            width 100%
            opacity 0
            content ""
            height 2px
            position absolute
            bottom 0
            left 0
            border-radius 10px
            background-color #3C7FFF
            z-index 2  
            transition-duration 0.2s 0.2s 0.2s 
            transition-property all
            +b($m)
              display none
          &:hover
            opacity 1
          &.active
            color #3C7FFF
            opacity 1
            cursor default
            &:after
              opacity 1 
            +b($m)
              &:before  
                border-color #3C7FFF                   
          & + .working__tabs-titles-item
            +a($m)
              margin-left 30px
            +b($m)
              margin-left 0
      &-content
        box-sizing border-box
        +a($m)
          padding 0 12.63%
        +b($m)
          padding 0 
        &-item
          display none
          opacity 0
          height 0
          transition opacity 2s 
          &.active
            opacity 1 
            display block
            height auto 
      &-slider
        width 100%
        position relative
  $time = 500ms
  $delay = $time/2
  $mode = cubic-bezier(.17, .67, .55, 1.43)
  .swiper-wrapper 
    .swiper-slide   
      transition: z-index 0ms $delay;
      img 
        position relative
        transition $time $mode
        opacity 0
        box-sizing border-box
        +a($m)
          border 16px solid #F3F6FB
          border-radius 10px
          width 100%
        +b($m)
          border 4px solid #F3F6FB  
          border-radius 6px    
          width calc(100% - 20px)    
      span 
        display none
        font-family "Proxima Nova"
        color #636870
        padding-top 20px
        margin-top 35px
        border-top 1px solid #F3F3F3
        opacity 0.7
        +a($m)
          line-height 24px
          font-size 18px
        +b($m)
          line-height 20px
          font-size 16px
      &.swiper-slide-prev 
        z-index: 1;
        img 
          opacity: .5;
          transform: translateX(8%) scale(.56);
        .slider-single-download 
          transform: translateX(-150px);
      &.swiper-slide-next 
        z-index 1
        img 
          opacity .5
          +a($m)
            transform translateX(-8%) scale(.56)
          +b($m)
            transform translateX(-8%) scale(.846) translateY(3%)
        .slider-single-download 
          transform: translateX(150px);
      &.swiper-slide-active 
        z-index 2
        img 
          opacity 1
          transform translateX(0%) scale(1)
        span 
          display block       
        .slider-single-download 
          opacity: 1;
          transition-delay: 100ms;
          transform: translateX(0px);
  .swiper-buttons
    width 100%
    padding-top 100%
    position absolute
    top 0
    left 0

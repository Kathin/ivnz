.main-page
  .header
    background-image url(../img/main-page-header.png)
    background-size cover
    background-position top    
    background-color #ffffff
    +a($m)
      min-height 900px
    +b($m)
      min-height 568px
      padding 0 20px
    &__content
      max-width 772px
      text-align left
      +a($m)
        padding-top 273px
      +b($m)
        padding-top 185px
      h1
        text-transform uppercase        
    &__button      
      border 2px solid #F78200
      border-radius 2px
      color #ffffff
      font-weight bold
      text-align center      
      font-family "Proxima Nova"
      display inline-block
      +a($m)
        font-size 18px
        line-height 76px
        height 76px
        padding 0 40px
      +b($m)
        width 100%
        box-sizing border-box  
        font-size 15px
        line-height 46px
        height 50px
      &:hover
        background-color #F78200
        text-decoration none
    .greyline
      position absolute
      right 0
      +a($m)
        top 110px 
      +b($m)
        top 102px 
      &.active    
        height 120px
  .project
    +b($m)
      padding 0 20px
    .blueline
      position absolute
      left 0
      +a($m)
        top -50px 
      +b($m)
        top -25px 
      &.active
        +a($m)    
          height 100px
        +b($m)
          height 60px
    .greyline
      position absolute
      left 50% 
      +a($m)
        top -173px
      +b($m)
        top -82px 
      &.active
        +a($m)     
          height 476px
        +b($m)
          height 100px
    .orangecircle
      position absolute
      right 0
      +a($m)
        top -171px
      +b($m)
        top -63px  
      &.active
        +a($m)     
          height 204px
        +b($m)
          height 100px
    &__content
      color #000000
      font-size 0
      +a($m)
        padding-top 121px
      +b($m)
        padding-top 40px
      h2
        text-transform uppercase
        +b($m)
          text-align center
      &-left,
      &-right
        display inline-block
        vertical-align top
        +a($m)
          width 50%
        +b($m)
          width 100%
        h3
          text-transform uppercase
          +b($m)
            text-align center 
            margin-bottom 40px     
        ul
          padding 0
          li
            vertical-align middle
            display block
            font-weight bold
            position relative
            box-sizing border-box
            +a($m)              
              padding 20px 0 0 105px
              line-height 72px
              height 88px
              font-size 16px
              margin-bottom 20px
            +b($m)
              padding 0
              text-align center
              font-size 14px
              margin-bottom 40px
            img 
              display inline-block
              +a($m)
                position absolute
                bottom 0
                left 0
              +b($m)
                position relative  
                text-align center              
            span
              line-height 22px
              display inline-block
              vertical-align middle
              +b($m)
                width 100%
      &-left 
        +a($m)
          margin-top 80px          
          li:nth-child(3)
            padding-top 28px
            height 96px
          li:nth-child(4)
            padding-top 22px
            height 87px
        +b($m)
          margin-top 40px
        h3 
          margin-bottom 35px
      &-right       
        box-sizing border-box
        +a($m)
          margin-top 32px
          padding-left 32px
          ul
            li 
              padding-left 111px
              &:nth-child(1)
                img
                  left -5px 
              &:nth-child(3) 
                height 94px
                padding-top 27px 
              &:nth-child(4) 
                height 97px
                padding-top 32px 
        +b($m)
          margin-top 20px
        h3 
          margin-bottom 12px
  .influence
    margin 0 auto
    position relative 
    +a($m)
      margin-top 212px
    +b($m)
      margin-top 0   
    .blueline
      position absolute      
      z-index 2
      +a($m)
        top -99px 
        right 0px
      +b($m)
        top -16px
        right 20px
      &.active
        +a($m)    
          height 200px
        +b($m)
          height 60px 
    &__photo
      width 407px
      height 420px
      display block
      position absolute
      +a($t)
        right 204px
        top -173px
      +btw($m, $t)  
        right 20px
        top -173px
      +b($m)
        top 124px
        left 50%
        transform translateX(-50%) 
      img
        width 100%
        height 100%  
        
        position:absolute;
        clip-path:url("data:image/svg+xml;charset=utf8,%3C?xml version='1.0' encoding='UTF-8'?%3E%3Csvg width='355px' height='367px' viewBox='0 0 355 367' version='1.1' xmlns='http://www.w3.org/2000/svg' xmlns:xlink='http://www.w3.org/1999/xlink'%3E%3C!-- Generator: Sketch 50.2 (55047) - http://www.bohemiancoding.com/sketch --%3E%3Ctitle%3EPath 7%3C/title%3E%3Cdesc%3ECreated with Sketch.%3C/desc%3E%3Cdefs%3E%3C/defs%3E%3Cg id='2.-Graphics' stroke='none' stroke-width='1' fill='none' fill-rule='evenodd'%3E%3Cpath d='M1,197.123417 L1,154.811728 C1,94.7023919 34.8693355,40.2298524 88.4316521,14.0490746 C142.275557,-12.1783966 207.050372,2.05822047 244.599187,48.3982236 L325.597847,147.123867 C362.493193,191.90099 363.498578,256.369422 327.971084,302.331067 C293.39327,347.986136 236.908577,371.31646 179.106311,363.832179 L141.563366,357.958784 C60.8246607,347.183485 1,278.627646 1,197.123417 Z' id='Path-7' stroke='%233C7FFF' stroke-width='2' fill-rule='nonzero' transform='translate(177.478541, 183.106761) scale(-1, -1) translate(-177.478541, -183.106761) '%3E%3C/path%3E%3C/g%3E%3C/svg%3E");

    &__content
      width 100%      
      color #ffffff
      font-size 0 
      +a($m)
        padding 150px 0
      +b($m)
        padding 40px 20px
        box-sizing border-box
      &:before
        content ""
        display block
        border-radius 20px  
        width 1430px  
        height 100%
        background #1F2637
        position absolute
        top 0
        left -145px
        z-index 0
        background-image linear-gradient(-180deg, rgba(255,255,255,0.025) 0%, rgba(60,127,255,0.05) 74%)  
      h2 
        text-transform uppercase
        z-index 1
        position relative
        +b($m)
          margin-bottom 463px
      &-left
      &-right
        display inline-block
        box-sizing border-box
        vertical-align top
        +a($t)
          width 50%
          margin-top 81px 
        +b($t)
          width 100%
          margin-top 40px
        ul
          padding-left 0        
        li
          display block
          position relative 
          font-family "Proxima Nova" 
          +a($m)
            display block
            padding-left 30px
            font-size 18px
            line-height 32px  
          +b($m)
            display inline  
            font-size 16px
            line-height 20px     
          &:before
            content ""
            width 7px
            height 7px
            border-radius 10px
            border 3px solid #ffffff
            position absolute
            top 9.5px
            left 0   
            +a($m)
              display block 
            +b($m)
              display none
      &-left        
        +a($d)
          padding-right 16.45%
        +btw($t, $d)
          padding-right 10%  
        +b($m)
          margin-top 0
        ul
          +a($d)
            margin-left -30px 
          +b($d)
            margin-left 0px 
      &-right               
        +a($t)
          padding-right 11%
        +b($t)
          padding-right 0
        ul
          +a($t)
            margin-left -20px 
          +b($t) 
            margin-left 0
  .working
    position relative
    .greyline
      position absolute      
      z-index 2
      +a($m)
        top -85px 
        left 0px
      +b($m)
        top -30px
        left 20px
      &.active
        +a($m)    
          height 200px
        +b($m)
          height 60px 
    .orangeline
      position absolute      
      z-index 2
      +a($m)
        top -50px 
        left calc(50% + 15px)
      +b($m)
        display none
      &.active
        +a($m)    
          height 100px
    .orangecircle
      position absolute      
      z-index 2
      +a($m)
        top -61px 
        right 0px
      +b($m)
        top -42px
        right 20px
      &:before
        +a($m)          
          bottom auto
          top -16px
        +b($m)          
          bottom auto
          top -10px
      &.active
        +a($m)    
          height 400px
        +b($m)
          height 100px 
    
        
        
        
        
      +a($m)
        margin-top 50px
      +b($m)
        margin-top 15px
      &-titles        
        position relative
        display inline-block
        +a($m)
          margin-bottom 60px
        +b($m)
          margin-bottom 25px
        &:after
          width 100%
          content ""
          height 2px

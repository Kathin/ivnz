.audit
  .header
    background-image url(../img/audit-header.png)
    background-size cover
    background-position top    
    background-color #ffffff
    //+a($m)
      //min-height 688px
    +b($m)
      padding 0 20px
    &__content
      text-align center
      +a($m)
        padding-top 237px
        padding-bottom 60px
      +b($m)
        padding-top 100px        
        padding-bottom 40px
      h1
        text-transform uppercase  
        margin 0
        +b($m)
          font-size 21px
          margin-bottom 39px
        br 
          display block      
    &__button-arrow      
      border 1px solid rgba(250, 250, 250, .1)
      border-radius 60px
      width 60px
      height 60px
      color #ffffff      
      display block
      background url('../img/arrow-bottom.svg') no-repeat
      background-position center
      margin 0 auto
      margin-top 121px
      +b($m)
        display none
      &:hover
        border-color rgba(250, 250, 250, .5)
        text-decoration none
    .greyline
      position absolute
      right 0
      +a($m)
        top 90px 
      +b($m)
        top 66px 
      &.active 
        +a($m)
          height 180px
        +b($m) 
          height 80px  
      &.-left
        right auto
        left 0
        background-color rgba(216,216,216,0.1)
        top 110px 
        +b($m)
          display none
        &.active    
          height 180px
      &.-center
        right 31.4%
        background-color rgba(216,216,216,0.1)
        top 0 
        +b($m)
          display none
        &.active    
          height 180px
      &.-bottom
        right 0
        background-color rgba(216,216,216,0.1)
        +a($m)
          top 404px
        +b($m)
          top 257px
        &.active    
          height 90px
    .orangecircle
      position absolute
      right 0
      +a($m)
        display none
      +b($m)
        top 317px
        left 0 
      &.active 
        +b($m) 
          height 90px  
    &__image
      display block
      line-height 0
      +a($m)
        bottom -156px
        right -77px
        width 326px
        height 335px
        position absolute
      +b($m)
        position relative
        width calc(100% + 40px)
        margin-left -20px
        text-align center
      img 
        +a($m)
          width 100%
          height 100%
        +b($m)
          max-width 330px
          width 100%        
  .audit-form
    color #000
    background-image url('../img/audit-form-back.svg')
    background-position center 287px
    .container
      +a($m)
        padding-top 150px
    .greyline
      position absolute
      background-color rgba(216,216,216,0.3) 
      +a($m)
        top -70px
        left 33.9%
      +b($m)
        top -30px 
        left 20px
      &.active
        +a($m)     
          height 140px
        +b($m)
          height 60px
      &.-bottom
        background-color rgba(216, 216, 216, 0.2) 
        +a($m)
          top 886px
          left 0
        +b($m)
          display none
        &.active
          +a($m)     
            height 180px
    .orangecircle
      position absolute
      +a($m)
        top -265px
        left 0
      +b($m)
        top -69px  
        right 20px
      &.active
        +a($m)     
          height 360px
        +b($m)
          height 100px
      &.-long
        background-color rgba(247, 130, 0, .2) 
        +a($m)
          top 150px
          right 0
          left auto
        +b($m)
          display none
        &.active
          +a($m)     
            height 720px
    &__title
      max-width 700px
    &__subtitle
      color #000
      margin-top 20px
  &__engines
    margin-top 80px
    .container
      font-size 0
      +b($m)
        padding 0 20px
        box-sizing border-box
    &-item
      display inline-block
      box-sizing border-box
      vertical-align top
      position relative
      +a($m)
        width 50%
      +b($m)
        width 100%
        & + &
          margin-top 20px
      &-text 
        color #000
        display block
        +a($m)
          font-size 24px
          line-height 34px
        +b($m)
          font-size 18px
          line-height 24px
      &:first-child  
        .audit__engines-item-text 
          +a($m)     
            padding-right 90px
          //+b($m)
        .audit__engines-item-img
          +a($m)
            left -10%
          &:after
            top 100px
            right auto
            left -92px            
            background-image url('../img/engine1.svg')
            width 418px
            height 406px
      &:last-child  
        .audit__engines-item-text 
          +a($m)
            padding-left 14px 
            padding-right 20px
          //+b($m)
        .audit__engines-item-img
          +a($m)
            left -4%
      &-img
        position relative
        +a($m)
          width 106.5%
          margin-top 60px
        +b($m)
          width 544px
          margin-top 20px          
          margin-left -16px
        &:after
          content ''
          position absolute
          background-image url('../img/engine2.svg') 
          width 408px
          height 420px
          background-size 100%
          top 74px
          right -105px  
          z-index 0  
          +b($m)  
            display none    
        img 
          width 100%  
          z-index 2 
          position relative
        
    
        